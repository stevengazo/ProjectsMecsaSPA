
<div class="border rounded shadow-sm p-3">

    <!-- ========================================================= -->
    <!-- INFORMACIÓN GENERAL -->
    <!-- ========================================================= -->
    <h6 class="text-center fw-bold mb-3">Información General</h6>

    <div class="row g-3 mb-3">
        <div class="col-md-4">
            <div class="fw-semibold text-muted small">Número</div>
            <div>@offer.OfferId</div>
        </div>

        <div class="col-md-4">
            <div class="fw-semibold text-muted small">Fecha</div>
            <div>@offer.Creation.ToLongDateString()</div>
        </div>

        <div class="col-md-4">
            <div class="fw-semibold text-muted small">Autor</div>
            <div>@offer.Author</div>
        </div>
    </div>

    <div class="mb-3">
        <div class="fw-semibold text-muted small">Cliente</div>
        <div>@offer.Customer</div>
    </div>

    <div class="mb-4">
        <div class="fw-semibold text-muted small">Descripción</div>
        <div class="text-break">@offer.Description</div>
    </div>

    <hr class="my-3" />

    <!-- ========================================================= -->
    <!-- CLASIFICACIÓN -->
    <!-- ========================================================= -->
    <h6 class="text-center fw-bold mb-3">Clasificación</h6>

    <div class="row g-3 mb-4">
        <div class="col-md-6">
            <div class="fw-semibold text-muted small">Tipo de Contacto</div>
            <span class="badge bg-secondary">@offer.ContactType</span>
        </div>

        <div class="col-md-6">
            <div class="fw-semibold text-muted small">Tipo de Oferta</div>
            <span class="badge bg-info">@offer.Type</span>
        </div>
    </div>

    <hr class="my-3" />

    <!-- ========================================================= -->
    <!-- REQUERIMIENTOS -->
    <!-- ========================================================= -->
    <h6 class="text-center fw-bold mb-3">Requerimientos</h6>

    <div class="row g-2 mb-4">
        <div class="col-md-4">
            @RequerimientoBadge("DDCE", offer.RequiredDDCE)
        </div>
        <div class="col-md-4">
            @RequerimientoBadge("Ionizante", offer.RequiredLightningStrike)
        </div>
        <div class="col-md-4">
            @RequerimientoBadge("Torre", offer.RequireTower)
        </div>
        <div class="col-md-4">
            @RequerimientoBadge("SPAT", offer.RequireSPAT)
        </div>
        <div class="col-md-4">
            @RequerimientoBadge("Supresor", offer.RequireSurgeProtector)
        </div>
        <div class="col-md-4">
            @RequerimientoBadge("Otros", offer.RequireOther)
        </div>
    </div>

    <hr class="my-3" />

    <!-- ========================================================= -->
    <!-- DATOS COMERCIALES -->
    <!-- ========================================================= -->
    <h6 class="text-center fw-bold mb-3">Datos Comerciales</h6>

    <div class="row g-3">
        <div class="col-md-4">
            <div class="fw-semibold text-muted small">Monto</div>
            <div>@offer.Amount.ToString("N2")</div>
        </div>

        <div class="col-md-4">
            <div class="fw-semibold text-muted small">Calculado Por</div>
            <div>@offer.CalculateBy</div>
        </div>

        <div class="col-md-4">
            <div class="fw-semibold text-muted small">Responsable</div>
            <div>@offer.Responsible</div>
        </div>

        <div class="col-md-4 mt-2">
            <div class="fw-semibold text-muted small">Estado</div>
            <span class="badge bg-success">@offer.State</span>
        </div>
    </div>

</div>


@code {

    [Parameter]
    public Offer offer { get; set; }

    RenderFragment RequerimientoBadge(string label, bool value) => builder =>
  {
      builder.OpenElement(0, "span");
      builder.AddAttribute(1, "class",
          value ? "badge bg-success me-1" : "badge bg-secondary me-1");
      builder.AddContent(2, value ? $"✔ {label}" : $"✖ {label}");
      builder.CloseElement();
  };

}
