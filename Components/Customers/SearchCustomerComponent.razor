@page "/search-customer"
@inject IDbContextFactory<ProjectsDBContext> DbContextFactory

<h3> Clientes</h3>

<EditForm Model="searchModel" OnValidSubmit="ApplyFilters">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="border rounded shadow-sm p-3 mb-3">

        <h6 class="fw-bold mb-3">Filtros de Búsqueda</h6>

        <div class="row g-3 align-items-end">

            <div class="col-md-6">
                <label for="name" class="form-label small fw-semibold">
                    Nombre
                </label>
                <InputText id="name"
                           @bind-Value="searchModel.Name"
                           class="form-control form-control-sm"
                           placeholder="Ingrese el nombre" />
            </div>

            <div class="col-md-4">
                <label for="type" class="form-label small fw-semibold">
                    Tipo
                </label>
                <InputSelect id="type"
                             @bind-Value="searchModel.Type"
                             class="form-select form-select-sm">
                    <option value="">Todos</option>
                    <option value="Publico">Público</option>
                    <option value="Privado">Privado</option>
                </InputSelect>
            </div>

            <div class="col-md-2 d-grid">
                <button type="submit"
                        class="btn btn-sm btn-outline-primary">
                    Buscar
                </button>
            </div>

        </div>
    </div>
</EditForm>


@if (customers != null)
{
    <table class="table table-striped mt-3 table-hover">
        <thead>
            <tr>
                <th>
                    <label @onclick="() => SortByColumn(nameof(Customer.Name))" >Nombre</label>
                </th>
                <th>
                    <label @onclick="() => SortByColumn(nameof(Customer.Type))" >Tipo</label>
                </th>
                <th>
                    <label @onclick="() => SortByColumn(nameof(Customer.DNI))" >DNI</label>
                </th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in customers)
            {
                <tr>
                    <td>@customer.Name</td>
                    <td>@customer.Type</td>
                    <td>@customer.DNI</td>
                    <td>
                        <a href="/customers/@customer.CustomerId" class="btn btn-sm btn-outline-info">
                            Ver
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private SearchModel searchModel = new();
    private List<Customer> customers = new();

    private string currentSortColumn;
    private bool isAscending = true;

    private async Task ApplyFilters()
    {
        using (var db = DbContextFactory.CreateDbContext())
        {
            var query = db.Customers.AsQueryable();

            if (!string.IsNullOrEmpty(searchModel.Name))
            {
                query = query.Where(c => c.Name.Contains(searchModel.Name));
            }

            if (!string.IsNullOrEmpty(searchModel.Type))
            {
                query = query.Where(c => c.Type == searchModel.Type);
            }

            // Aplicar el ordenamiento
            if (!string.IsNullOrEmpty(currentSortColumn))
            {
                query = isAscending ? query.OrderBy(c => EF.Property<object>(c, currentSortColumn))
                                    : query.OrderByDescending(c => EF.Property<object>(c, currentSortColumn));
            }

            customers = await query.ToListAsync();
        }
    }

    private void SortByColumn(string columnName)
    {
        if (currentSortColumn == columnName)
        {
            isAscending = !isAscending;
        }
        else
        {
            currentSortColumn = columnName;
            isAscending = true;
        }

        ApplyFilters();
    }

    public class SearchModel
    {
        public string Name { get; set; }
        public string Type { get; set; }
    }
}
