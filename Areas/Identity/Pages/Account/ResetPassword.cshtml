@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Cambio de Contraseña";
}
<div class="row justify-content-center align-items-center ">

    <div class="col-md-5 col-sm-10">

        <div class="card shadow-lg border-0 rounded-4 overflow-hidden">

            <!-- Banda superior -->
            <div class="bg-warning text-dark text-center py-4">
                <h3 class="fw-semibold mb-0">
                    Cambiar contraseña
                </h3>
                <small class="opacity-75">
                    Establece una nueva contraseña segura
                </small>
            </div>

            <div class="card-body p-4">

                <form method="post">

                    <div asp-validation-summary="ModelOnly"
                         class="alert alert-danger py-2 small"></div>

                    <input asp-for="Input.Code" type="hidden" />

                    <!-- Email -->
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email"
                               class="form-control rounded-3"
                               autocomplete="username"
                               placeholder="Correo electrónico"
                               aria-required="true" />
                        <label asp-for="Input.Email">
                            Correo electrónico
                        </label>
                        <span asp-validation-for="Input.Email"
                              class="text-danger small"></span>
                    </div>

                    <!-- Nueva contraseña -->
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Password"
                               class="form-control rounded-3"
                               autocomplete="new-password"
                               placeholder="Nueva contraseña"
                               aria-required="true" />
                        <label>
                            Nueva contraseña
                        </label>
                        <span asp-validation-for="Input.Password"
                              class="text-danger small"></span>
                    </div>

                    <!-- Confirmar contraseña -->
                    <div class="form-floating mb-4">
                        <input asp-for="Input.ConfirmPassword"
                               class="form-control rounded-3"
                               autocomplete="new-password"
                               placeholder="Confirmar contraseña"
                               aria-required="true" />
                        <label>
                            Confirmar contraseña
                        </label>
                        <span asp-validation-for="Input.ConfirmPassword"
                              class="text-danger small"></span>
                    </div>

                    <!-- Botón -->
                    <div class="d-grid">
                        <button type="submit"
                                class="btn btn-warning btn-lg rounded-pill shadow-sm">
                            Actualizar contraseña
                        </button>
                    </div>

                </form>

            </div>
        </div>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
