<AuthorizeView>
    <Authorized>
        <div class="d-flex align-items-center gap-2">

            <!-- Usuario -->
            <div class="dropdown">
                <a class="nav-link dropdown-toggle fw-semibold d-flex align-items-center gap-1"
                   href="#"
                   role="button"
                   data-bs-toggle="dropdown"
                   aria-expanded="false">

                    <i class="bi bi-person-circle fs-5"></i>
                    @context.User.Identity?.Name
                </a>

                <ul class="dropdown-menu dropdown-menu-end shadow-sm rounded-3">

                    <li>
                        <a class="dropdown-item"
                           href="Identity/Account/Manage">
                            <i class="bi bi-gear me-2"></i>
                            Mi perfil
                        </a>
                    </li>

                    <li><hr class="dropdown-divider" /></li>

                    <li>
                        <form method="post"
                              action="Identity/Account/Logout">
                            <button type="submit"
                                    class="dropdown-item text-danger">
                                <i class="bi bi-box-arrow-right me-2"></i>
                                Cerrar sesión
                            </button>
                        </form>
                    </li>
                </ul>
            </div>

        </div>
    </Authorized>

    <NotAuthorized>
        <div class="d-flex align-items-center gap-2">
            <a class="btn btn-outline-primary btn-sm rounded-pill px-3"
               href="Identity/Account/Login">
                Iniciar sesión
            </a>

            <a class="btn btn-primary btn-sm rounded-pill px-3"
               href="Identity/Account/Register">
                Registrarse
            </a>
        </div>
    </NotAuthorized>
</AuthorizeView>
