<AuthorizeView>
    <Authorized>
        <a href="Identity/Account/Manage">@context.User.Identity?.Name!</a>
        <form method="post" action="Identity/Account/LogOut">
            <button type="submit" class="nav-link btn btn-link mx-2"> Salir</button>
        </form>
    </Authorized>
    <NotAuthorized>
        <a href="Identity/Account/Register">Registrar</a>
        <a href="Identity/Account/Login">Iniciar Sesión</a>
    </NotAuthorized>
</AuthorizeView>
