@page "/chat"
@inject ChatService ChatService

<div class="container-fluid h-75">
    <div class="row h-100">

        <!-- SIDEBAR SALAS -->
        <div class="col-md-3 border-end bg-light p-3">
            <h6 class="text-uppercase text-muted mb-3 text-center">
                <i class="bi bi-chat-dots"></i> Salas activas
            </h6>

            <ul class="list-group list-group-flush">
                @foreach (var room in activeRooms)
                {
                    <li class="list-group-item list-group-item-action
                                   @(room == selectedRoom ? "active" : "")"
                        style="cursor:pointer"
                        @onclick="() => SelectRoom(room)">
                        <i class="bi bi-people me-2"></i> @room
                    </li>
                }
            </ul>
        </div>

        <!-- CHAT -->
        <div class="col-md-9 d-flex flex-column p-0">

            <!-- HEADER -->
            <div class="border-bottom p-3 d-flex justify-content-between align-items-center bg-white">
                <h5 class="mb-0">
                    <i class="bi bi-chat-left-text"></i>
                    @(!string.IsNullOrEmpty(selectedRoom)
                                        ? selectedRoom
                                        : "Seleccione una sala")
                </h5>

                @if (!string.IsNullOrEmpty(selectedRoom))
                {
                    <button class="btn btn-outline-danger btn-sm" @onclick="LeaveRoom">
                        <i class="bi bi-box-arrow-right"></i> Salir
                    </button>
                }
            </div>

            <!-- USUARIOS ACTIVOS -->
            @if (activeUsers.Any())
            {
                <div class="border-bottom px-3 py-2 bg-light small">
                    <i class="bi bi-people-fill"></i>
                    @string.Join(", ", activeUsers)
                </div>
            }

            <!-- MENSAJES -->
            <div class="flex-grow-1 p-3 overflow-auto bg-white">
                @foreach (var msg in messages.Where(m => m.Room == selectedRoom))
                {
                    <div class="mb-3">
                        <small class="fw-semibold text-muted">@msg.User</small>
                        <div class="bg-light rounded p-2 mt-1 d-inline-block">
                            @msg.Content
                        </div>
                    </div>
                }
            </div>

            <!-- INPUT MENSAJE -->
            <div class="border-top p-3 bg-light">
                <div class="input-group">
                    <textarea class="form-control"
                              @bind="message"
                              rows="2"
                              placeholder="Escribe un mensaje..."
                              disabled="@string.IsNullOrEmpty(selectedRoom)">
                    </textarea>
                    <button class="btn btn-primary" @onclick="SendMessage">
                        <i class="bi bi-send"></i>
                    </button>
                </div>
            </div>

        </div>
    </div>
</div>

<!-- UNIRSE A SALA -->
<div class="container mt-3">
    <div class="row g-2">
        <div class="col-md-4">
            <input class="form-control"
                   @bind="userName"
                   placeholder="Tu nombre" />
        </div>
        <div class="col-md-4">
            <select class="form-select" @bind="groupName">
                <option value="">Seleccione una sala</option>
                <option>Ingeniería</option>
                <option>Proyectos & Contabilidad</option>
            </select>
        </div>
        <div class="col-md-4">
            <button class="btn btn-success w-100" @onclick="JoinRoom">
                <i class="bi bi-box-arrow-in-right"></i> Unirse
            </button>
        </div>
    </div>
</div>

@code {

    private string userName;
    private string groupName;
    private string message;
    private string selectedRoom;

    private List<Message> messages = new();
    private List<string> activeRooms = new();
    private List<string> activeUsers = new();

    protected override async Task OnInitializedAsync()
    {
        ChatService.OnReceiveMessage((user, room, msg) =>
        {
            messages.Add(new Message
            {
                User = user,
                Room = room,
                Content = msg
            });

            InvokeAsync(StateHasChanged);
        });

        ChatService.OnUpdateActiveRooms(rooms =>
        {
            activeRooms = rooms.ToList();
            InvokeAsync(StateHasChanged);
        });

        ChatService.OnUpdateActiveUsers((room, users) =>
        {
            if (room == selectedRoom)
            {
                activeUsers = users;
                InvokeAsync(StateHasChanged);
            }
        });

        await ChatService.StartAsync();
        await UpdateActiveRooms();
    }

    private async Task SendMessage()
    {
        if (string.IsNullOrWhiteSpace(message) ||
            string.IsNullOrWhiteSpace(userName) ||
            string.IsNullOrWhiteSpace(selectedRoom))
            return;

        await ChatService.SendMessage(selectedRoom, userName, message);
        message = string.Empty;
    }

    private async Task JoinRoom()
    {
        if (string.IsNullOrWhiteSpace(userName) ||
            string.IsNullOrWhiteSpace(groupName))
            return;

        await ChatService.JoinRoom(groupName, userName);
        selectedRoom = groupName;
        await UpdateActiveRooms();
    }

    private async Task LeaveRoom()
    {
        if (string.IsNullOrWhiteSpace(userName) ||
            string.IsNullOrWhiteSpace(selectedRoom))
            return;

        await ChatService.LeaveRoom(selectedRoom, userName);
        selectedRoom = null;
        activeUsers.Clear();
        await UpdateActiveRooms();
    }

    private async Task UpdateActiveRooms()
    {
        activeRooms = (await ChatService.GetActiveRooms()).ToList();
        StateHasChanged();
    }

    private void SelectRoom(string room)
    {
        selectedRoom = room;
        StateHasChanged();
    }

    private class Message
    {
        public string User { get; set; }
        public string Room { get; set; }
        public string Content { get; set; }
    }
}
