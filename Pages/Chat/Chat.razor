@page "/chat"
@inject ChatService ChatService

<div class="container-fluid">
    <div class="row">
        <!-- Lateral izquierdo: Lista de salas -->
        <div class="col-md-4 bg-light p-3 rounded shadow" style="max-width: 25%;">
            <h5 class="text-center mb-3">Salas Activas</h5>
            <ul class="list-group">
                @foreach (var room in activeRooms)
                {
                    <li class="list-group-item @((room == selectedRoom) ? "bg-primary text-white" : "")"
                        @onclick="() => SelectRoom(room)" style="cursor: pointer;">
                        @room
                    </li>
                }
            </ul>
        </div>

        <!-- Lateral derecho: Chat -->
        <div class="col-md-8 bg-white p-3 rounded shadow" style="max-width: 75%;">

            <div class="d-flex justify-content-between align-items-center mb-4">
                <h4 class="mb-0">Chat - @selectedRoom</h4>
                <div>
                    <button class="btn btn-outline-secondary" @onclick="LeaveRoom">Abandonar</button>
                </div>
            </div>

            <!-- Mostrar usuarios activos -->
            <div class="mb-3">
                <h5>Personas en esta sala:</h5>
                <ul class="list-group">
                    @foreach (var user in activeUsers)
                    {
                        <li class="list-group-item">@user</li>
                    }
                </ul>
            </div>

            <!-- Input para el nombre y grupo -->
            <div class="row mb-3">
                <div class="col-md-6">
                    <input class="form-control" @bind="userName" placeholder="Tu nombre" />
                </div>
                <div class="col-md-6">
                    <select class="form-control" @bind="groupName">
                        <option value="Ingeniería">Ingeniería</option>
                        <option value="Proyectos & Contabilidad">Proyectos & Contabilidad</option>
                    </select>
                </div>
            </div>

            <!-- Botones Unirse y Abandonar -->
            <div class="d-flex justify-content-between">
                <button class="btn btn-success" @onclick="JoinRoom">Unirse</button>
                <button class="btn btn-secondary" @onclick="LeaveRoom">Salir</button>
            </div>

            <!-- Área para mensajes -->
            <div class="chat-messages mt-4" style="height: 300px; overflow-y: auto; border: 1px solid #ddd; border-radius: 8px; padding: 10px;">
                <ul class="list-unstyled">
                    @foreach (var msg in messages)
                    {
                        @if (msg.Room == selectedRoom)
                        {
                            <li class="mb-3">
                                <strong>@msg.User</strong>
                                <p class="bg-light p-2 rounded" style="display: inline-block;">@msg.Content</p>
                            </li>
                        }
                    }
                </ul>
            </div>

            <!-- Enviar mensaje -->
            <div class="d-flex mt-3">
                <textarea class="form-control" @bind="message" placeholder="Escribe un mensaje..." rows="3"></textarea>
                <button class="btn btn-primary ms-2" @onclick="SendMessage" style="align-self: flex-start;">Enviar</button>
            </div>
        </div>
    </div>
</div>

@code {
    private string userName;
    private string groupName;
    private string message;
    private string selectedRoom;
    private List<Message> messages = new List<Message>();
    private List<string> activeRooms = new List<string>();
    private List<string> activeUsers = new List<string>();

    protected override async Task OnInitializedAsync()
    {
        ChatService.OnReceiveMessage((user, room, msg) =>
        {
            messages.Add(new Message { User = user, Room = room, Content = $"{msg}" });
            if (room == selectedRoom)
            {
                InvokeAsync(StateHasChanged);
            }
        });

        ChatService.OnUpdateActiveRooms(updatedRooms =>
        {
            activeRooms = updatedRooms.ToList();
            InvokeAsync(StateHasChanged);
        });

        // Suscribirse a la actualización de los usuarios activos
        ChatService.OnUpdateActiveUsers((room, users) =>
        {
            if (room == selectedRoom)
            {
                activeUsers = users;
                InvokeAsync(StateHasChanged);
            }
        });

        await ChatService.StartAsync();
        await UpdateActiveRooms();
    }

    private async Task SendMessage()
    {
        if (!string.IsNullOrEmpty(userName) && !string.IsNullOrEmpty(selectedRoom) && !string.IsNullOrEmpty(message))
        {
            await ChatService.SendMessage(selectedRoom, userName, message);
            message = string.Empty; // Clear message input
        }
    }

    private async Task JoinRoom()
    {
        if (!string.IsNullOrEmpty(userName) && !string.IsNullOrEmpty(groupName))
        {
            await ChatService.JoinRoom(groupName, userName);
            selectedRoom = groupName; // Automatically select the room after joining
            await UpdateActiveRooms();
        }
    }

    private async Task LeaveRoom()
    {
        if (!string.IsNullOrEmpty(userName) && !string.IsNullOrEmpty(selectedRoom))
        {
            await ChatService.LeaveRoom(selectedRoom, userName);
            if (selectedRoom == groupName)
            {
                selectedRoom = null; // Clear the selection if leaving the current room
            }
            await UpdateActiveRooms();
        }
    }

    private async Task UpdateActiveRooms()
    {
        activeRooms = (await ChatService.GetActiveRooms()).ToList();
        StateHasChanged();
    }

    private void SelectRoom(string room)
    {
        selectedRoom = room;
        StateHasChanged();
    }

    private class Message
    {
        public string User { get; set; }
        public string Room { get; set; }
        public string Content { get; set; }
    }
}
