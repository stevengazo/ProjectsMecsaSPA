    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <!-- Add chart.js reference if chart components are used in your application. -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/4.0.1/chart.umd.js" integrity="sha512-gQhCDsnnnUfaRzD8k1L5llCCV6O9HN09zClIzzeJ8OJ9MpGmIlCxm+pdCkqTwqJ4JcjbojFr79rl2F1mzcoLMQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <!-- Add chartjs-plugin-datalabels.min.js reference if chart components with data label feature is used in your application. -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/chartjs-plugin-datalabels/2.2.0/chartjs-plugin-datalabels.min.js" integrity="sha512-JPcRR8yFa8mmCsfrw4TNte1ZvF1e3+1SdGMslZvmrzDYxS69J7J49vkFL8u6u8PlPJK+H3voElBtUCzaXj+6ig==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <!-- Add sortable.js reference if SortableList component is used in your application. -->
    <script src="https://cdn.jsdelivr.net/npm/sortablejs@latest/Sortable.min.js"></script>
    <script src="_content/Blazor.Bootstrap/blazor.bootstrap.js"></script>

    <script>
        window.getScrollPosition = function (element) {
            return element.scrollTop;
        };

        window.getClientHeight = function (element) {
            return element.clientHeight;
        };

        window.getScrollHeight = function (element) {
            return element.scrollHeight;
        };
        window.downloadPDF = function (pdfBase64, fileName) {
            // Crear un enlace en el DOM para iniciar la descarga
            const link = document.createElement('a');
            link.href = 'data:application/pdf;base64,' + pdfBase64;
            link.download = fileName;
            link.click();
        };

        window.downloadImage = function (imageBase64, fileName, mimeType) {
            // mimeType puede ser: "image/png", "image/jpeg", "image/webp", etc.
            const link = document.createElement('a');
            link.href = 'data:' + mimeType + ';base64,' + imageBase64;
            link.download = fileName;
            link.click();
        };


             window.captureElementAsImage = async function (elementId) {
            const element = document.getElementById(elementId);

            if (!element) {
                console.error("Elemento no encontrado: " + elementId);
                return null;
            }

            // ESCALA MÁXIMA SEGURA
            const maxScale = window.devicePixelRatio * 4;  // Ultra HD

            const canvas = await html2canvas(element, {
                scale: maxScale,
                backgroundColor: null,
                useCORS: true
            });

            // 🔵 **Forzar ancho final a 1200px**
            const targetWidth = 1200;
            const scaleFactor = targetWidth / canvas.width;
            const targetHeight = canvas.height * scaleFactor;

            const resizedCanvas = document.createElement("canvas");
            resizedCanvas.width = targetWidth;
            resizedCanvas.height = targetHeight;

            const ctx = resizedCanvas.getContext("2d");
            ctx.drawImage(canvas, 0, 0, targetWidth, targetHeight);

            const dataUrl = resizedCanvas.toDataURL("image/png");

            return dataUrl.split(",")[1];
        };


       

    </script>

    <script src="https://cdn.jsdelivr.net/npm/html2canvas@1.4.1/dist/html2canvas.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sortablejs@latest/Sortable.min.js"></script>



</body>
</html>
